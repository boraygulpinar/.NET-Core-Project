@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @using (Html.BeginForm("EditService", "Service", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(x => x.ServiceID)
                <div class="form-group">
                    @Html.LabelFor(x => x.Title, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ImageURL, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                </div>
            }
        </div>
    </div>
</div>

