@model EntityLayer.Concrete.Education
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @using (Html.BeginForm("EditEducation", "Education", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.HiddenFor(x => x.EducationID)

                <div class="form-group">
                    @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Date, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.ImageURL, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Description, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Güncelle</button>
                </div>
            }
        </div>
    </div>
</div>
