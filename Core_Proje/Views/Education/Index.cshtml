@using EntityLayer.Concrete
@model List<Education>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header border-0 d-flex justify-content-between align-items-center">
    <h3 class="mb-2">Eğitim Listesi</h3>
    <a href="/Education/AddEducation" class="btn btn-info">Eğitim Ekle</a>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">İsim</th>
                <th scope="col" class="sort" data-sort="budget">Tarih</th>
                <th scope="col" class="sort" data-sort="budget">Açıklama</th>
                <th scope="col" class="sort" data-sort="budget">Düzenle</th>
                <th scope="col" class="sort" data-sort="budget">Sil</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.EducationID</span>
                            </div>
                        </div>
                    </th>
                    <td class="budget">
                        @item.Name
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a href="/Education/EditEducation/@item.EducationID" class="btn btn-warning">Düzenle</a>
                    </td>
                    <td>
                        <a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>